#include<stdio.h>

// Function to calculate the square of a number
int Calculate_Square(int Number) {
    return Number * Number;
}

int main() {
    int number, Square;))
    printf(" \n Please enter a number: ");
    scanf("%d", &number);
    Square = Calculate_Square(number);
    printf("The square of %d is %d.\n", number, Square);
    return 0;
}
